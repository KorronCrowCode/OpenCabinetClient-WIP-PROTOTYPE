<UserControl x:Class="OpenShare.Views.MakeDrawerView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenShare.Views"
             xmlns:module="clr-namespace:OpenShare.Modules"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="Gray">

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="7*"/>
        </Grid.ColumnDefinitions>

        <!-- SideBar -->
        <module:SidebarModule Grid.Column="0"/>

        <!-- Cabinet -->
        <Grid Grid.Column="1">

            <Grid.RowDefinitions>
                <!-- Header -->
                <RowDefinition/>
                <!-- Drawer Grid -->
                <RowDefinition Height="8*"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <!-- Title -->
                    <ColumnDefinition Width="12*"/>
                    <!-- Empty -->
                    <ColumnDefinition/>
                    <!-- Add -->
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <TextBlock 
                
                    Style="{StaticResource Header}"
                    Text="Create Drawer" 
                    FontSize="24" 
                    Margin="10 10 0 0" 
                />
            </Grid>

            <!-- Drawer Grid -->
            <module:CreateDrawerModule Grid.Row="1" />

        </Grid>

    </Grid>
</UserControl>
