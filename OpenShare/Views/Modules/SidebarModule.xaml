<UserControl x:Class="OpenShare.Modules.SidebarModule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OpenShare.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <!-- Account -->
            <RowDefinition/>
            <!-- Home -->
            <RowDefinition/>
            <!-- Cabinet -->
            <RowDefinition/>
            <!-- Chat -->
            <RowDefinition/>

        </Grid.RowDefinitions>

        <Button Grid.Row="0" Margin="10" Content="ACCOUNT" Background="LightGray" BorderBrush="Transparent"/>

        <Button Grid.Row="1" Margin="10" Content="HOME" Background="LightGray" BorderBrush="Transparent"/>

        <Button Grid.Row="2" Margin="10" Content="CABINET" Background="LightGray" BorderBrush="Transparent"
                Command="{Binding UpdateViewCommand}" CommandParameter="CABINET"/>

        <Button Grid.Row="3" Margin="10" Content="CHAT" Background="LightGray" BorderBrush="Transparent"/>
    </Grid>
</UserControl>
